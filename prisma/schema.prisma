generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  telephone    String
  document     String
  pix          String
  password     String
  refreshToken String?
  roles        Role[]
  created_at   DateTime @default(now())
}

model Role {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())
  users      User[]
}
